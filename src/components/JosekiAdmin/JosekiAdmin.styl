.audit-container {
    flex-grow: 1;
    flex-shrink:0;
    flex-basis:auto;
    display: flex;
    flex-direction: column;

    .audit-actions {
        flex-grow: 1;
        display: flex;
        justify-content: flex-end;
    }

    .position-link {
        width: 3rem;
        display: inline-block;
        themed color link-color;
    }

    .position-link:hover {
        cursor:pointer;
        text-decoration:underline;
    }

    .ReactTable, .ReactTable * {
        themed border-color shade5 !important;
    }

    .admin-row {
        .top, .bottom {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;

            span {
                padding-right: 0.25rem;
                padding-left: 0.25rem;
            }
        }
    }

    .pagination-bottom .-pagination {
        .-btn {
            themed color fg;
            themed background card-background-color;
        }

        input, select {
            themed background input-bg;
        }
    }

    .bottom-admin-stuff {
        display: flex;
        justify-content: space-between;

        .user-admin {
            display: flex;
            flex-direction: column;
        }

        .admin-info {
            flex-grow: 1;
            text-align: right;
            margin-right: 3px;
        }
    }
}
